/* pages/pijob/pijob.wxss */
page{
  background-color: #f5f5f5;
}
.titles,.content{
  background-color: #fff;
  padding: 30rpx 40rpx;
  margin-bottom: 25rpx;
}
.titles view:nth-child(1){
  font-weight: 800;
  font-size: 48rpx;
  margin-bottom: 26rpx;
}
.titles view:nth-child(2){
  color: #ff6700;
  font-size: 46rpx;
  font-weight: 800;
  margin-bottom: 6rpx;
}
.titles view:nth-child(2) text{
  font-size: 24rpx;
}
.other text:nth-child(1){
  color: #909399;
  font-size: 28rpx;
}
.other text:nth-child(2){
  display: inline-block;
  width: 2rpx;
  height: 20rpx;
  background-color: #909399;
  margin: 0 20rpx;
}
.other text:nth-child(3){
  color: #909399;
  font-size: 28rpx;
}
.content_title{
  display: block;
  font-weight: 800;
  font-size: 36rpx;
  line-height: 100rpx;
  color: #444;
}
.content_t{
  color: #606266;
  font-size: 30rpx;
}
.content_child{
  margin-bottom: 40rpx;
}
.xian{
  width: 50rpx;
  height: 5rpx;
  background-color: #ff6700;
  margin-bottom: 20rpx;
}
.address{
  background-color: #fff;
  overflow: hidden; 
  position: relative
}
.mapsTitle{
  margin: 30rpx 40rpx;
}
.maps{
  width: 100%;
  height: 140rpx;
  margin-bottom: 60rpx;
}
.address_map{
  background-color: #fff;
  position: absolute;
  top: 50%;
  left: 50%;
  transform: translate(-50%,-50%);
  width: 80%;
  height: 60%;
  box-shadow: 0rpx 5rpx 20rpx rgba(0, 0, 0, 0.1);
  display: flex;
  box-sizing: border-box;
  padding: 22rpx 0;
}
.address_map text:nth-child(1){
  flex: 1;
  text-align: center;
  line-height: 80rpx;
  font-size: 50rpx;
}
.address_map text:nth-child(2){
  flex: 5;
  font-size: 28rpx;
  padding-right: 10rpx;
}
.address_map text:nth-child(3){
  width: 60rpx;
  border-left: 1rpx solid #f5f5f9;
  text-align: center;
  line-height: 80rpx;
  color: #ccc;
}
.xias{
  margin-bottom: 25rpx;
}
.names{
  margin-bottom: 180rpx;
}
.bottom{
  position: fixed;
  bottom: 0;
  display: flex;
  background-color: #fff;
  z-index: 999;
  width: 100%;
  height: 100rpx;
  box-shadow: 0rpx 0rpx 20rpx rgba(0, 0, 0, 0.2);
}
.bottom view:nth-child(1){
  flex: 1;
  text-align: center;
  line-height: 100rpx;
  box-sizing: border-box;
  border-top: 1rpx solid #f5f5f5;
}
.bottom view:nth-child(2){
  flex: 3;
  background-color: #ff6700;
  text-align: center;
  color: #fff;
  line-height: 100rpx;
}
.label{
  color: #ff6700;
  border: 2rpx solid #ff6700;
  padding: 2rpx 10rpx;
  font-size: 24rpx;
  margin-right: 20rpx;
}