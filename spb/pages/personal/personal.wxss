/* pages/personal/personal.wxss */
page{
  width: 100%;
  height: 100%;
}
.content{
  background-color: #f5f5f8;
  width: 100%;
  height: 100%;
}
.head{
  background-color: #fff;
  height: 350rpx;
  overflow: hidden;
}
.headImg{
  width: 180rpx;
  height: 180rpx;
  border-radius: 50%;
  margin: 40rpx auto;
  display: block;
  box-shadow: 5rpx 5rpx 20rpx rgba(0, 0, 0, 0.3);
}
.headText{
  text-align: center;
  /* color: #fff; */
  font-size: 40rpx;
  margin-top: -10rpx;
}
.btngroup{
  background-color: #fff;
  margin-top: 30rpx;
  /* padding: 0 40rpx; */
}
.fat{
   padding: 0 40rpx;
   width: 100%;
   box-sizing: border-box;
   position: relative;
}
.paddings{
  padding: 0 40rpx;
}
.nav::after{
  content: "";
  width: 100%;
  height: 100%;
  background-color: rgba(0,0,0,0.05);
  position: absolute;
  top: 0;
  left: 0;
}
.btns{
  line-height: 120rpx;
}
.xian{
  border-bottom: 1rpx solid #f5f5f9;
}
.login{
  width: 75%;
  height: 380rpx;
  background-color: #fff;
  position: absolute;
  top: 300rpx;
  left: 50%;
  transform: translateX(-50%);
  box-shadow: 0 0 30rpx rgba(0, 0, 0, 0.3);
  padding: 20rpx 30rpx;
  border-radius: 20rpx;
  overflow: hidden;
}
.login text{
  float: right;
}
.wx{
  margin-top: 80rpx;
  margin-bottom: 50rpx;
}
.zhe{
  position: fixed;
  top: 0;
  width: 100%;
  height: 100%;
  z-index: 999;
  background-color: rgba(0, 0, 0, 0.4);
}
/* 账户登录 */
.zhinpput{
  border: 1rpx solid #ccc;
  border-radius: 15rpx;
  padding: 5rpx 10rpx;
  min-height: 70rpx;
}
.first{
  margin-top: 20rpx;
  margin-bottom: 30rpx;
}
.zhtitle{
  font-size: 50rpx;
  font-weight: 800;
  text-align: center;
}
.zhoperation{
  position: absolute;
  bottom: 0;
  display: flex;
  width: 100%;
  left: 0;
  height: 80rpx;
  line-height: 80rpx;
}
.zhoperation view{
  flex: 1;
  text-align: center;
}
.zhoperation view:nth-child(1){
  border-top: 1rpx solid #f5f5f5;
  box-sizing: border-box;
}
.zhoperation view:nth-child(2){
  background-color: #ff6700;
  color: #fff;
  box-sizing: border-box;
}
.qu::after{
  content: "";
  width: 50%;
  height: 100%;
  background-color: rgba(0,0,0,0.1);
  position: absolute;
  top: 0;
  left: 0;
}
.dengs::after{
  content: "";
  width: 50%;
  height: 100%;
  background-color: rgba(0,0,0,0.1);
  position: absolute;
  top: 0;
  left: 50%;
}