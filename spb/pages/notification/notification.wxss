/* pages/notification/notification.wxss */
page{
  background-color: #f5f5f9;
}
.card{
  background-color: #fff;
  margin: 20rpx 30rpx;
  padding: 30rpx 30rpx;
  border-radius: 20rpx;
  box-shadow: 0 0 25rpx rgba(0, 0, 0, 0.2);
  margin-top: 50rpx;
}
.title{
  font-size:45rpx;
  font-weight: 800;
}
.time{
  font-size: 30rpx;
  color: #909399;
  border-bottom: 2rpx solid #ccc;
  line-height: 60rpx;
}
.content{
  border-bottom: 2rpx solid #ccc;
  padding: 20rpx 0;
  min-height:250rpx;
  color: #666;
}
.del{
  color: #ff6700;
  margin-top: 20rpx;
}
.jiantou{
  display: flex;
  justify-content: space-between;
  align-items: center;
}
.jiantou::after{
  content: "";
  height: 15rpx;
  width: 15rpx;
  border-top: 3rpx solid #ff6700;
  border-right: 3rpx solid #ff6700;
  transform: rotate(45deg);
}
.dels{
  color: red;
}
.zan{
  color: #ccc;
  text-align: center;
  line-height: 400rpx;
}