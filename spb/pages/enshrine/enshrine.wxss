page{
  background-color: #f5f5f5;
}
.contant{
  margin-top: 10rpx;
}
.pt_recruitment{
  background-color: #fff;
  padding: 30rpx;
  margin-bottom: 10rpx;
}
.title{
  display: flex;
  font-size: 40rpx;
}
.title text:nth-child(1){
  flex: 3;
  text-overflow: ellipsis;
  white-space: nowrap;
  overflow: hidden;
}
.title text:nth-child(2){
  color: #ff6700;
  font-size: 34rpx;
}
.address{
  margin: 10rpx 0;
}
.address text:nth-child(1){
  color: #ccc;
  font-size: 30rpx;
}
.address text:nth-child(2){
  display: inline-block;
  width: 2rpx;
  height: 20rpx;
  background-color: #ccc;
  margin: 0 20rpx;
}
.address text:nth-child(3){
  color: #ccc;
  font-size: 30rpx;
}
.times{
  color: #ccc;
  font-size: 32rpx;
}
.loads{
  text-align: center;
  font-size: 24rpx;
  color: #909399;
  background-color: #fff;
  padding: 20rpx 0;
}
.screen{
  background-color: #fff;
  /* margin-bottom: 40rpx; */
  z-index: 999;
  box-shadow: 5rpx 5rpx 7rpx rgba(0, 0, 0, 0.1);
  position: fixed;
  top: 0;
  width: 100%;
}
.searchinput{
  padding: 20rpx 50rpx;
}
.searchinput input{
  border: 2rpx solid rgba(0, 0, 0, 0.1);
  /* */
  border-radius: 10rpx;
  padding: 5rpx 20rpx;
  transition: 0.8s;
}
.placeholderClass{
  color: #ccc;
}
.screenText{
  color: #666;
  font-size: 30rpx;
  text-align: center;
  display: flex;
}
.screenText picker{
  flex: 1;
  padding: 20rpx 0;
}
.none{
  color: #ccc;
  text-align: center;
  margin-top: 600rpx;
}
.dropDown{
  /* position: absolute;
  top: 100%; */
  z-index: 999;
  width: 100%;
  height: 0rpx;
  background-color: #fff;
  box-shadow: 5rpx 5rpx 7rpx rgba(0, 0, 0, 0.1);
  overflow: hidden;
  position: relative;
}
.dropDownBtn{
  position: absolute;
  bottom: 0;
  display: flex;
  text-align: center;
  width: 100%;
  line-height: 80rpx;
  font-size: 32rpx;
}
.dropDownBtn view:nth-child(1){
  flex: 1;
  border-top: 2rpx solid #E4E7ED;
  box-sizing: border-box;
}
.dropDownBtn view:nth-child(2){
  flex: 1;
  color: #fff;
  background-color: #ff6700;
}
.zan{
  color: #ccc;
  text-align: center;
  line-height: 400rpx;
}
.dels{
  background-color: #fff;
  color: #909399;
  text-align: center;
  line-height: 80rpx;
  margin-top: 10rpx;
}